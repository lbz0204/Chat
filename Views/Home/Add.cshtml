@model test.ViewModels.ItemCreateViewModel

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>


@using (Html.BeginForm("Add","Home",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
       @Html.ValidationSummary(true)
       <table>
         <tr>
             <td>
                 @Html.LabelFor(model => model.NewData.Name)
             </td>
             <td>
                 @Html.TextBoxFor(model => model.NewData.Name)
             </td>
         </tr>
           <tr>
               <td>
                   @Html.LabelFor(model => model.NewData.Price)
               </td>
               <td>
                   @Html.TextBoxFor(model => model.NewData.Price)

               </td>
           </tr>
           <tr>
               <td>
                   @Html.LabelFor(model => model.ItemImage)
               </td>
               <td>
                   @Html.TextBoxFor(model => model.ItemImage,new { type = "file" })
               </td>
           </tr>
       </table>
       <input type="submit" value="大頭照上傳" />
}

<div>
    @Html.ActionLink("回首頁", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
